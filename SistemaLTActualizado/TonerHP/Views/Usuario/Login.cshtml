
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title H. Pediatrico - Libreria/I. Informaticos</title>
    @Styles.Render("~/Content/css")
    <style>
        /* Estilos personalizados sin cambiar estructura */
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
        }

        .card {
            background-color: rgba(255, 255, 255, 0.85) !important;
            border-radius: 15px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
        }

        .btn-outline-dark {
            transition: all 0.3s ease;
            border-width: 2px;
        }

            .btn-outline-dark:hover {
                background-color: #1e3c72;
                color: white !important;
            }
    </style>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center" style="padding-top: 280px; ">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5" style=" backdrop-filter: blur(5px);">
                                <div class="card-header text-center py-4">
                                    <h3 class="text-dark font-weight-light my-4">Inicio de sesión</h3>
                                </div>
                                <div class="card-body px-4">
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <span>@error.ErrorMessage</span><br>
                                            }
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    }
                                    <form method="post" action="@Url.Action("Login", "Usuario")">
                                        @Html.AntiForgeryToken()
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="nameusuario" name="usuario" type="text" placeholder="Usuario" required />
                                            <label for="nameusuario">Usuario</label>
                                        </div>
                                        <div class="form-floating mb-4">
                                            <input class="form-control" id="namecontraseña" name="clave" type="password" placeholder="Contraseña" required />
                                            <label for="namecontraseña">Contraseña</label>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-outline-dark px-5">Ingresar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        // Validación básica de formulario
        document.querySelector('form').addEventListener('submit', function (e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                this.classList.add('was-validated');
            }
        }, false);
    </script>
</body>
</html>