
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title H. Pediatrico - Libreria/I. Informaticos</title>
    @Styles.Render("~/Content/css")
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center" style="padding-top: 280px; ">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5" style=" background-color: rgba(255, 255, 255, 0.5); backdrop-filter: blur(5px);">
                                <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Inicio de sesión</h3>
                                </div>
                                <div class="card-body">
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="alert alert-danger">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <p>@error.ErrorMessage</p>
                                            }
                                        </div>
                                    }
                                    <form method="post" action="@Url.Action("Login", "Usuario")">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="nameusuario" name="usuario" type="text" placeholder="Usuario" requerid />
                                            <label for="nameusuario">Usuario</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="namecontraseña" name="clave" type="password" placeholder="Contraseña" required />
                                            <label for="nameusuario">Contraseña</label>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-outline-dark">Ingresar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
</body>
</html>



    
}