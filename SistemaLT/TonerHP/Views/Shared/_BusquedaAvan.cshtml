@{ ViewData["Title"] = "Filtrado de PRoductos"; }
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <label class="form-label">Rubro</label>
            <select id="cborubro" class="form-select" name="idRubro" onchange="CargarTipos(this.value)" style="width:100%">
                <option value="">Seleccione un Rubro</option>
            </select>
        </div>

        <div class="col-sm-6">
            <label class="form-label">Tipo</label>
                <select style="width:100%" id="cbotipo" disabled class="form-select" name="idTipo" onchange="CargarProductosporTipo(this.value, document.getElementById('cborubro').value)">
                </select>
        </div>
    </div>
    
    <div class="row mt-2">
        <div class="col-sm-6">
            <label class="form-label">Codigo ID</label>
            <select id="cbocodigo" class="form-select" name="idCodigo" onchange="CargarProductosporCI(this)" style="width:100%">
                <option value="">Seleccione un Codigo ID</option>
            </select>
        </div>
        <div class="col-sm-6 text-center mt-2" style="align-content: center;">
            <button type="button" class="btn btn-primary mx-auto" id="BtnLimpiar" onclick="LimpiarSelects()">
                Limpiar busqueda
            </button>
        </div>
    </div>
</div>