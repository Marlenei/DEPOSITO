
@{
    ViewBag.Title = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-boxes me-2"></i>Proveedores
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)"> Crear nuevo PROVEEDOR</button>
            </div>
        </div>
        <hr />
        <div class="table-responsive">
            <table id="tabla" class="table table-striped-columns table-hover table-bordered" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th>Razon social</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h1 class="modal-title fs-5" id="titulodinamico"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">
                <input id="txtid" type="hidden" value="0" />
                <input type="hidden" class="form-control" id="txtusuario" value="@Session["AccesCode"]" readonly>
                <div class="row g-2">
                    <div class="col-sm-6">
                        <label for="txtrazonsocial" class="form-label">Razon Social</label>
                        <select id="cborazonsocial" class="form-select"> </select>
                    </div>

                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                @*Mensaje de alerta*@
                <div class="row mt-12">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            This is a danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var tabladata;
        var filaSeleccionada;

        tabladata = $('#tabla').DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarProveedores", "Toner")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "RazonSocial" },
                {
                    "data": "Activo", "render": function (data) {
                        return data ? '<span class="badge text-bg-success">Si</span>' : '<span class="badge text-bg-danger">No</span>';
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "auto"
                }
            ],
            "language": {
                "url": "../Language/es-Es.json",
            }
        });

         jQuery.ajax({
               url: '@Url.Action("ListarProveedores", "Toner")',
               type: "GET",
               data: null,
               dataType: "json",
               contentType: "application/json; charset=utf-8",
               success: function(data) {
                   $("<option>").attr({ "value": "" }).text("Seleccione un Proveedor").appendTo("#cborazonsocial");
                   var opciones = [];
                   $.each(data.data, function(index, valor) {
                       opciones.push({
                           id: valor.IdProveedor,
                           text: valor.RazonSocial
                       });
                   });


                   $('#cborazonsocial').select2({
                       data: opciones,
                       tags: true,
                       placeholder: "Selecciona una opción",
                       allowClear: true,
                       dropdownParent: $('#FormModal'),

                   });
               },
               error: function(error) {
                   console.log(error);
               }
           });

        function modalTitle(title) {
            document.getElementById('titulodinamico').innerText = title;
        }

        function abrirModal(json) {
            modalTitle('Crear nuevo');
                $("#txtid").val(0);
                $("#txtusuario").val(@Session["AccesCode"]);
                $("#cborazonsocial").val(null).trigger('change');
                $("#cboactivo").val(1);
                $("#mensajeError").hide();


            if (json != null) {
                modalTitle('Editar');

                    $("#txtid").val(json.IdProveedor);
                    $("#cborazonsocial").val(json.IdProveedor).trigger('change');
                    $("#txtusuario").val(json.IdUsuario);
                    $("#cboactivo").val(json.Activo == true ? 1:0 );

                }
                $("#FormModal").modal("show");

            }

            $("#tabla tbody").on("click", '.btn-editar', function () {
                filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                abrirModal(data)
            })

            function Guardar() {
                var Proveedores = {
                    IdProveedor: $("#txtid").val(),
                    IdUsuario: $("#txtusuario").val(),
                    RazonSocial: $("#cborazonsocial option:selected").text(),
                    Activo: $("#cboactivo").val() == 1?true:false,
                }

                jQuery.ajax({
                    url: '@Url.Action("GuardarProveedor", "Toner")',
                    type: "POST",
                    data: JSON.stringify({ objeto: Proveedores }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        $(".modal-body").LoadingOverlay("hide");
                        //PROVEEDOR NUEVA
                        console.log(data.resultado)

                        if (Proveedores.IdProveedor == 0) {
                            if (data.resultado != 0) {
                                Proveedores.IdProveedor = data.resultado;
                                tabladata.row.add(Proveedores).draw(false);
                                location.reload();
                                $("#FormModal").modal("hide");
                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                            //PROVEEDOR EDITAR
                        else {
                            if (data.resultado) {

                                tabladata.row(filaSeleccionada).data(Proveedores).draw(false);
                                filaSeleccionada = null;
                                location.reload();
                                $("#FormModal").modal("hide");
                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                    },
                    error: function (error) {
                        $(".modal-body").LoadingOverlay("hide");
                        $("#mensajeError").text("Error Ajax");
                        $("#mensajeError").show();
                    },
                    beforeSend: function () {
                        $(".modal-body").LoadingOverlay("show", {
                            imageResizeFactor: 2,
                            text: "Cargando...",
                            size:14
                        })

                    },
                });
            }

    </script>
}
